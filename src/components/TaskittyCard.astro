---
const caracteristicas = [
    { url: "../src/assets/img/NuevaAnotacion.jpg", titulo: "Agrega anotaciones", desripcion: "Agrega anotaciones y mantente al tanto de tus actividades diarias" },
    { url: "../src/assets/img/Personalizacion.jpg", titulo: "Dale tu estilo", desripcion: "Personaliza tus anotaciones con colores distintivos" },
    { url: "../src/assets/img/AnotacionFav.jpg", titulo: "Fija tus anotaciones", desripcion: "Aparta tus anotaciones favoritas y ten acceso a ellas en todo momento" },
];
---

<section class="flex flex-col items-center justify-center bg-[#F3F0E9] px-8 py-12 lg:px-16 lg:py-20 min-h-screen w-full">

        <div class="w-full lg:w-2/3 flex flex-col items-center gap-12">
                <h1 class="text-4xl text-black font-semibold 
                text-center mb-8">
                        Controla tus tareas pendientes
                </h1>
                <div class="flex flex-col lg:flex-row w-full justify-center gap-10">
                        {caracteristicas.map((caracteristica) => (
                                <div class="flex flex-col items-center p-4 border-t-2 h-full w-full lg:w-1/3 gap-6 border-transparent bg-clip-border border-t-gradient text-black">
                                    <div class='flex flex-col items-center'>
                                        <img class="object-contain w-50 h-40" src={caracteristica.url} alt={caracteristica.titulo} />
                                        <h2 class="text-xl mt-2 text-center font-semibold">{caracteristica.titulo}</h2>
                                    </div>
                                    <p class='text-center'>{caracteristica.desripcion}</p>
                                </div>
                            ))}
                </div>
            </div>  
</section>
